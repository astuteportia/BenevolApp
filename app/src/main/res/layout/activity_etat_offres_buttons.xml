<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.uottawa.eecs.seg2505.benevolapp.EtatOffreButtonActivity"
    android:weightSum="1">



    <com.lorentzos.flingswipe.SwipeFlingAdapterView
        android:id="@+id/adapter_offre"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rotation_degrees="5"
        tools:context="offresAppliquer.EtatOffreButtonActivity"
        android:layout_above="@+id/btn_ignore" />



    <Button
        android:id="@+id/btn_ignore"
        android:text="Refuser"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:onClick="onRefuse"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="41dp"
        android:layout_marginEnd="41dp" />

    <Button
        android:id="@+id/btn_apply"
        android:text="Accepter"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:onClick="onAccept"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btn_ignore"
        android:layout_toStartOf="@+id/btn_ignore" />




</RelativeLayout>